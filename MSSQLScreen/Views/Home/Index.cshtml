@model MSSQLScreen.Models.UserAccount
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout_Home.cshtml";
}

@if (User.IsInRole("Admin"))
{
    <div class="vertical-center">
        <div class="row">
            <div class="col-md-4">
                <img src="/Content/img/report-256.png" class="img-responsive center-block">
                <div class="row">
                    <div class="col-xs-8 col-xs-offset-2">
                        @Html.ActionLink("Generate Job", "MigrateJob", "Jobs", new { @class = "btn btn-padding btn-md btn-primary center-block" })
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <img src="~/Content/img/usage-256.png" class="img-responsive center-block" />
                <div class="row">
                    <div class="col-xs-8 col-xs-offset-2">
                        @Html.ActionLink("CPU & Memory Usage", "CPUMemoryUsage", "Resources", new { @class = "btn btn-padding btn-md btn-primary center-block" })
                    </div>
                </div>
            </div>

        </div>

    </div>
}
else
{

    <div class="vertical-center">
        <div class="row">

            <div class="col-md-4">
                <img src="/Content/img/report-256.png" class="img-responsive center-block">
                <div class="row">
                    <div class="col-xs-8 col-xs-offset-2">
                        @Html.ActionLink("Generate Job", "MigrateJob", "Jobs", new { @class = "btn btn-padding btn-md btn-primary center-block" })
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <img src="~/Content/img/user-256.png" class="img-responsive center-block" />
                <div class="row">
                    <div class="col-xs-8 col-xs-offset-2">
                        <a class="btn btn-padding btn-md btn-primary center-block" href="#myModal" data-toggle="modal">Add Administrator</a>
                    </div>
                </div>                
            </div>

            <div class="col-md-4">
                <img src="~/Content/img/usage-256.png" class="img-responsive center-block" />
                <div class="row">
                    <div class="col-xs-8 col-xs-offset-2">
                        @Html.ActionLink("CPU & Memory Usage", "CPUMemoryUsage", "Resources", new { @class = "btn btn-padding btn-md btn-primary center-block" })
                    </div>
                </div>
            </div>

        </div>

    </div>

}





@{
    List<SelectListItem> listAdmin = new List<SelectListItem>();
    listAdmin.Add(new SelectListItem
    {
        Text = "Superadmin",
        Value = "Superadmin"
    });
    listAdmin.Add(new SelectListItem
    {
        Text = "Admin",
        Value = "Admin",
    });
}

@using (Html.BeginForm("ManageAdmin", "User"))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Add Administrator</h4>
                    </div>
                    <div class="modal-body">


                        <div class="form-group has-feedback">
                            <div class="col-md-4">
                                @Html.LabelFor(model => model.Username)
                            </div>
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group has-feedback">
                            <div class="col-md-4">
                                @Html.LabelFor(model => model.Privilege)
                            </div>
                            <div class="col-md-8">
                                @Html.DropDownListFor(model => model.Privilege, listAdmin, "Select Privilege", new { @class = "form-control", @placeholder = "Username" })
                                @Html.ValidationMessageFor(model => model.Privilege, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary ">Add</button>
                </div>
            </div>
        </div>
    </div>
}   